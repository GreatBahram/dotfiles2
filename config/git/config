[help]
	autocorrect = 20

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        new = green bold
        old = red bold
        whitespace = red reverse

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
    git = !git

[pager]
	status = true

[core]
    pager = delta

[delta]
    # https://dandavison.github.io/delta/configuration.html
    hyperlinks = true
    line-numbers = true
    navigate = true
    syntax-theme = Monokai Extended

[diff]
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictStyle = zdiff3
[init]
	defaultBranch = main
